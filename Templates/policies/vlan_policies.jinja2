
  "{{ name }}" = {
    description  = "{{ descr }}"
{%- if tags %}
    tags = [
  {%- for item in tags %}
      {
    {%- for k, v in item.items() %}
        {{ k }} = "{{ v }}",
    {%- endfor %}
      },
  {%- endfor %}
    ]
{%- else %}
    tags            = []
{%- endif %}
{%- if vlans %}
    vlans = {
  {%- for item in vlans %}
      "{{ loop.index }}" = {
    {%- if item['vlan_list'] == "1" %}
        auto_allow_on_uplinks = true
    {%- elif item['auto_allow_on_uplinks'] %}
        auto_allow_on_uplinks = {{ item['auto_allow_on_uplinks']|lower }}
    {%- elif item['native_vlan'] == True %}
        auto_allow_on_uplinks = true
    {%- else %}
        auto_allow_on_uplinks = false
    {%- endif %}
    {%- for k, v in item.items() %}
      {%- if k == 'id' %}
        vlan_list             = "{{ v }}",
      {%- elif k == 'multicast_policy' %}
        multicast_policy      = "{{ v }}",
      {%- elif k == 'name' %}
        name                  = "{{ v }}",
      {%- endif %}
    {%- endfor %}
    {%- if item['vlan_list'] == "1" %}
    {%- elif k == 'native_vlan' %}
        native_vlan           = true
    {%- elif k == 'native_vlan' %}
        native_vlan           = {{ v|lower }}
    {%- else %}
        native_vlan           = false
    {%- endif %}
      },
  {%- endfor %}
    }
{%- else %}
    vlans        = {}
{%- endif %}
  }